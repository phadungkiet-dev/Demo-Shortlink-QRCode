{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-a7b8-c9d0-e1f2a3b4c5d6",
    "name": "Shortlink API (Phase 1)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health & Auth",
      "item": [
        {
          "name": "1. Get CSRF Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Save CSRF Token from body",
                  "try {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.csrfToken) {",
                  "        pm.environment.set(\"csrfToken\", jsonData.csrfToken);",
                  "        console.log(\"CSRF Token set: \" + jsonData.csrfToken);",
                  "    }",
                  "} catch (e) {",
                  "    console.error(\"Failed to parse JSON or find csrfToken: \" + e);",
                  "}",
                  "",
                  "// 2. Save CSRF Cookie",
                  "// Note: Postman handles cookies automatically in its cookie jar,",
                  "// but we save the csurf cookie explicitly for header-based requests if needed.",
                  "const csrfCookie = pm.cookies.get('_csrf');",
                  "if (csrfCookie) {",
                  "    pm.environment.set(\"csrfCookieHeader\", \"_csrf=\" + csrfCookie);",
                  "    console.log(\"CSRF Cookie saved.\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/csrf",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "csrf"]
            },
            "description": "RUN THIS FIRST. It gets the CSRF token and session cookie."
          },
          "response": []
        },
        {
          "name": "2. Login (Local)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-csrf-token",
                "value": "{{csrfToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@local.dev\",\n    \"password\": \"User#123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "3. Get Me (Check Auth)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "me"]
            }
          },
          "response": []
        },
        {
          "name": "4. Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-csrf-token",
                "value": "{{csrfToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/logout",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "logout"]
            }
          },
          "response": []
        },
        {
          "name": "Server Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/health",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "health"]
            }
          },
          "response": []
        }
      ]
    },
